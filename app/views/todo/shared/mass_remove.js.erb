$("input:checked").each(function(){ item_id = $(this).attr('id'); $('.' + item_id).remove();});
<% if @controller =~ /active_tasks/%>
$.ajax({type: "GET", url: "<%= SETTINGS[ENV['RAILS_ENV']]['url'] %>/todo/completed_tasks/"});
<%elsif @controller =~ /completed_tasks/%>
$.ajax({type: "GET", url: "<%= SETTINGS[ENV['RAILS_ENV']]['url'] %>/todo/"});
<%end%>
$.easyNotification({text: '<%=@notification%>'});