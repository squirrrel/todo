<%= render 'new', locals: {priority: @priority}%>
<div>
<table cellspacing="0">
<tbody>
<tr>
<%= render partial: '/todo/shared/headers' %>
</tr>
<tr class='task-items'></tr>
<%@tasks.each do |task|%>
<tr class="<%=task.id%> to-be-hovered" onmouseover = "show_actions(<%=task.id%>)" onmouseout = "hide_actions(<%=task.id%>)" >
<%  
%w{ description priority status created_at }.each do |attr|%>
<td ><div onmouseover= "show_header('div#<%=attr%>')" 
 onmouseleave = "hide_header('div#<%=attr%>')" 
id = "<%=attr + task.id.to_s%>" onblur= "set_noneditable(this)"><%= res= task.send attr %></div></td>
<span id='<%=attr + task.id.to_s%>_span' style = 'display:none;'><%=res%></span>
<% @dropdown ="#{task.id.to_s}" %>
<%end%> 
<%@task = task%>
<%#not yet implemented for the create action rendering %>
<%= render 'delete_complete_update', locals: { task: @task, priority: @priority, dropdown: @dropdown }%>
</tr>
<%end%>
</tbody>
</table>
</div>