<div id='sign-in-wrapper'>
<h1>#TODO</h1>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<br/><%= f.email_field :email, autofocus: true, placeholder: t(:devise)[:forms][:email_placeholder], class: 'sign-in-input' %>
<br/><%= f.password_field :password, placeholder: t(:devise)[:forms][:pass_placeholder], class: 'sign-in-input' %>
<br/><%= f.password_field :password_confirmation, placeholder: t(:devise)[:forms][:conf_pass_plcholder], class: 'sign-in-input' %>
<br/><br/><%= f.submit t(:devise)[:forms][:signup_link],  class: 'sign-in-submit', style: I18n.locale == :ua ? "margin-left: 157px;width: 150px;" : 'margin-left: 207px;width: 100px;'  %>
<% end %>

<%= render "devise/shared/links" %>
</div>