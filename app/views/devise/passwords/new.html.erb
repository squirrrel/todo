<div id='sign-in-wrapper'>
<h1>#TODO</h1>
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>
<br/>
<%= f.email_field :email, autofocus: true, placeholder: t(:devise)[:forms][:email_placeholder], class: 'sign-in-input'  %>
<%= f.submit t(:devise)[:forms][:send_instructions], id: 'resend-pass-submit', style: I18n.locale == :ua ? "font-size:10.5px;" : 'font-size:13px;' %>
<% end %>

<%= render "devise/shared/links" %>
</div>