<div id = 'resend_wrapper'>
<div id='sign-in-wrapper'>
<%= render "devise/shared/locales" %>
<h1>#TODO</h1>
<div id='not_found_in_database' style="display: <%= flash[:error] ? 'inline' : 'none' %>;" ><%=flash[:error]%></div>
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
<br/>
<%= f.text_field :email, autofocus: true, placeholder: t(:devise)[:forms][:email_placeholder], class: 'sign-in-input', id: 'resend_email'  %>
<%= f.submit t(:devise)[:forms][:send_instructions], id: 'resend-pass-submit', style: I18n.locale == :ua ? "font-size:10.5px;" : 'font-size:13px;' %>
<% end %>

<%= render "devise/shared/links" %>
<p id="copyright">&copy <%= t(:views)[:copyright]%></p>
</div>
</div>

