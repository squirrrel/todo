<div id='sessions_wrapper'>
<div id='notification_container'></div>
<div id='sign-in-wrapper'>
<%= render "devise/shared/locales" %>
<h1>#TODO</h1>
<div id="<%=flash[:alert] || flash[:error] ? 'not_found_in_database' : 'confirmation'%>" style="display:<%=flash[:alert] =~ /Invalid|Ви вказали невірну/ || flash[:notice] =~ /instructions/ || flash[:error] =~/wrong|пізніше/ ? 'inline' : 'none' %>;<%= I18n.locale == :ua || flash[:error] =~ /wrong|пізніше/ ? 'padding-bottom: 16px;padding-top: 4px;line-height: 10px;' : '' %>"><%=flash[:alert] ? flash[:alert] : flash[:notice]%></div>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {id: 'sign-in-form'}) do |f| %>
<br/><%= f.text_field :email, autofocus: true, placeholder: t(:devise)[:forms][:email_placeholder], class: 'sign-in-input' %>
<br/><%= f.password_field :password, placeholder: t(:devise)[:forms][:pass_placeholder], class: 'sign-in-input', id: 'signinpass' %>
<br/><br/><%= f.submit t(:devise)[:login_header], class: 'sign-in-submit', id: 'signin-button' %>
<% end %>
<br/>
<%= render "devise/shared/links" %>
 <p id="copyright">&copy <%= t(:views)[:copyright]%></p>
</div>
</div>
<%#the below one is for backend failure%>
<div id='devise_validation' style='display:none;'><%= t(:devise)[:failure][:invalid_both]%></div></br>
<div id="devise_validation_email_<%= I18n.locale == :ua ? '2' : '1' %>" class= 'invalid_email' style='display:none;'><%= t(:devise)[:failure][:invalid_email]%></div>

</br>

<div id="devise_validation_<%= I18n.locale == :ua ? 'ua' : 'en'%>" class= 'empty_email' style='display:none;'><%= t(:devise)[:failure][:please_empty_email]%></div></br>
<div id="devise_validation_password_<%= I18n.locale == :ua ? 'ua' : 'en'%>" class='empty_password' style='display:none;'><%= t(:devise)[:failure][:please_specify_password]%></div></br>