<div id='sessions_wrapper'>
<div id='sign-in-wrapper'>
<h1>#TODO</h1>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {id: 'sign-in-form'}) do |f| %>
<br/><%= f.email_field :email, autofocus: true, placeholder: t(:devise)[:forms][:email_placeholder], class: 'sign-in-input' %>
<br/><%= f.password_field :password, placeholder: t(:devise)[:forms][:pass_placeholder], class: 'sign-in-input', id: 'signinpass' %>
<br/><br/><%= f.submit t(:devise)[:login_header], class: 'sign-in-submit' %>
<% end %>
<br/>
<%= render "devise/shared/links" %>
</div>
</div>

<%#the below one is for backend failure%>
<div id='validation' style='display:none;'><%= t(:devise)[:failure][:invalid_both]%></div></br>
<div id='validation' class= 'invalid_email' style='display:none;'><%= t(:devise)[:failure][:invalid_email]%></div></br>
<div id='validation' class='invalid_password' style='display:none;'><%= t(:devise)[:failure][:invalid_password]%></div></br>
<div id='validation' class= 'empty_email' style='display:none;'><%= t(:devise)[:failure][:please_empty_email]%></div></br>
<div id='validation' class='empty_password' style='display:none;'><%= t(:devise)[:failure][:please_specify_password]%></div></br>