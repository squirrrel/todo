<div id='devise_validation' style='display:none;'><%= t(:devise)[:failure][:invalid_both]%></div></br>
<div id='devise_validation_email_1' class= 'invalid_email' style='display:none;'><%= t(:devise)[:failure][:invalid_email]%></div></br>
<div id='devise_validation' class= 'empty_email' style='display:none;'><%= t(:devise)[:failure][:please_empty_email]%></div></br>
<div id='devise_validation_password_1' class='empty_password' style='display:none;'><%= t(:devise)[:failure][:please_specify_password]%></div></br>